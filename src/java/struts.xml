<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>    
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">        
    </package>
    <package name="controller" namespace="/" extends="struts-default">
        <action name="ciudadInit" 
                class="controller.CiudadController" 
                method="execute">
            <result name="success">
                /view/ciudad/ciudadFind.jsp
            </result>            
        </action>
        <action name="login" 
                class="controller.UsuarioController" 
                method="execute">
            <result name="success">
                /view/ciudad/ciudadDetail.jsp
            </result>            
        </action>
        <action 
            name="ciudadFind" 
            class="controller.CiudadController" 
            method="findCiudadById">
            <result name="success">
                /view/ciudad/ciudadDetail.jsp
            </result>
            <result name="input">
                /view/ciudad/ciudadFind.jsp
            </result>            
        </action>
        
        <action name="returnper" 
                class="controller.CiudadController" 
                method="back">
            <result name="success">
                /view/ciudad/ciudadFind.jsp
            </result>            
        </action> 
        <action name="ciudadAdd" 
                class="controller.CiudadController" 
                method="add">
            <result name="success">
                /view/ciudad/ciudadAdd.jsp
            </result>            
        </action>
        <action name="ciudadSave" 
                class="controller.CiudadController" 
                method="save">
            <result name="success">
                /view/ciudad/ciudadDetail.jsp 
            </result>            
        </action>       
    </package>
</struts> 